$themes = (tb #f40) (tm #ff0037) (tmgj #8743e7)

$font-size = 12px

common-trans()
    transition: all .3s ease

disabled-btn()
    color: #fff
    background-color: gray
    border-color: gray
    cursor: auto

    &:hover
        color: #fff
        background-color: gray
        border-color: gray

center()
    display: flex
    justify-content: center
    align-content: center

#oss-watch
    font-size: $font-size
    position: absolute
    top: 50px
    // right: 500px
    left: 50px
    z-index: 999
    box-sizing: border-box

    ul
        margin: 0
        padding: 0
        list-style-type: none

    button
        outline: none
        -webkit-font-smoothing: inherit
        -webkit-appearance: none
        cursor: pointer

    .material-icons
        font-size: 14px

    .ow-btn
        padding: 4px 8px
        background-color: transparent
        border-width: 1px
        border-style: solid
        border-radius: 4px
        text-align: center
        common-trans()

        &.ow-btn-block
            width: 100%
            display: inline-block

    .ow-btn-entry
        &:hover
            transform: scale(1.1)

    h5.ow-title
        font-size: $font-size + 2
    
    h6.ow-title
        font-size: $font-size + 1

    .ow-title
        margin: 0
        padding-bottom: 6px

    .ow-close
        color: #bfbfbf
        position: absolute
        top: 2px
        right: 0px
        common-trans()
        cursor: pointer
        user-select: none

    .ow-hr
        width: 150px
        height: 2px
        margin: 0
        border: none

    .ow-task-list
        margin-top: 10px

    .ow-task
        color: #000
        padding: 5px 2px
        position: relative

        .ow-i-remove
            font-weight: bold
            display: none
            position: absolute
            top: 5px
            right: 6px
            common-trans()
            cursor: pointer

            &:hover
                transform: rotate(90deg)

        &:hover
            background-color: rgba(222, 222, 222, 0.1)

            .ow-i-remove
                display: block

    .ow-btn-newtask
        width: 100%
        margin-top: 10px
        border: 1px dashed transparent
        border-radius: 0
        center()
        common-trans()

        .material-icons
            padding-right: 2px
            font-weight: bold

    // start -- create box
    .ow-create-box
        width: 150px
        margin-top: 10px
        box-sizing: border-box

    .ow-title-create
        position: relative

        .ow-close
            font-size: 15px
    .ow-type-list
        display: flex
        flex-wrap: wrap

    .ow-type
        width: 34px
        height: 34px
        margin: 0 3px 5px 0
        border: 2px solid #dcdcdc
        box-sizing: border-box
        cursor: pointer
        zoom: 100%
        common-trans()

        &:hover
            transform: scale(1.1)

    .ow-img-box
        width: 30px
        height: 30px

    .ow-img
        object-fit: cover

    .ow-size-list
        display: flex
        flex-wrap: wrap

    .ow-size
        margin-right: 4px
        margin-bottom: 6px
        padding: 6px
        color: #000
        border: 1px solid #dcdcdc
        text-align: center
        display: block
        cursor: pointer
        common-trans()

    .ow-btn-create-box
        padding-top: 10px

    .ow-msg
        text-align: center
    // end -- create box

for $t in $themes
    $theme-name = $t[0]
    $color = $t[1]
    $color-light = lightness($color, 70%)

    #oss-watch.theme-{$theme-name}
        color: $color

        .ow-btn
            color: $color
            border-color: $color

            &:disabled
                disabled-btn()

            &.ow-btn-emp
                color: #fff
                background-color: $color

                &:disabled
                    disabled-btn()

                &:hover
                    color: #fff
                    background-color: $color-light

            &:hover 
                color: $color-light
                border-color: $color-light

        .ow-hr
            background-color: $color

        .ow-task:hover
            border-color: $color

            .ow-i-remove
                color: $color

        .ow-btn-newtask
            color: $color
            border-color: $color

            &:hover
                color: $color-light
                border-color: $color-light

        .ow-close:hover
            color: $color

        .ow-type:hover, .ow-type.ow-active
            border-color: $color-light

        .ow-size:hover, .ow-size.ow-active
            border-color: $color-light

// transitions
.fadeLeftIn-enter
    opacity: 0
    transform: translateX(-50px)

.fadeLeftIn-enter-active
    common-trans()

.fadeLeftIn-enter-to
    opacity: 1
    transform: translateX(0px)
    
.fadeUpIn-enter
    opacity: 0
    transform: translateY(-20px)

.fadeUpIn-enter-active
    common-trans()

.fadeUpIn-enter-to
    opacity: 1
    transform: translateY(0px)

.fadeDownIn-enter
    opacity: 0
    transform: translateY(20px)

.fadeDownIn-enter-active
    common-trans()

.fadeDownIn-enter-to
    opacity: 1
    transform: translateY(0px)

.fade-enter
    opacity: 0
    transform: translateX(-50px)

.fade-enter-active
    common-trans()

.fade-enter-to
    opacity: 1
    transform: translateX(0px)

.fade-leave
    opacity: 1
    transform: translateX(0px)

.fade-leave-active
    common-trans()

.fade-leave-to
    opacity: 0
    transform: translateX(50px)

.fade-move
    common-trans()
